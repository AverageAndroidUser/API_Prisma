generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Moneda {
  ID_Moneda  Int @id @default(autoincrement())
  Nombre String 
  Codigo String
  Simbolo String
  Pais Pais[] //Referencia la tabla con la foranea
}

model Pais {
  ID_Pais Int @id @default(autoincrement())
  Nombre String                     //Referencia local       Referencia en "Moneda"
  Moneda Moneda? @relation(fields: [ID_Moneda], references: [ID_Moneda]) //Especificacion de la relacion
  ID_Moneda Int //LLave foranea
  EstadoDepartamento EstadoDepartamento[] //Referencia la tabla con la foranea
}
model EstadoDepartamento{
  ID_EstadoDepartamento Int @id @default(autoincrement())
  Nombre String
  Pais Pais? @relation(fields: [ID_Pais], references: [ID_Pais])
  ID_Pais Int
  Ciudad Ciudad[]
}
model Ciudad {
  ID_Ciudad Int @id @default(autoincrement())
  Nombre String
  EstadoDepartamento EstadoDepartamento? @relation(fields: [ID_EstadoDepartamento], references: [ID_EstadoDepartamento])
  ID_EstadoDepartamento Int
  Usuario Usuario[]
}
model Usuario {
  ID_Usuario Int @id @default(autoincrement())
  Nombre String
  Apellido String
  Correo String @unique
  Contrase√±a String
  FechaNacimiento DateTime
  FechaIngreso DateTime @default(now())
  ID_Ciudad Int
  Ciudad Ciudad? @relation(fields: [ID_Ciudad], references: [ID_Ciudad])
  IIngreso IEGreso[]
}

model CategoriaIEGreso{
  ID_CategoriaIEgreso Int @id @default(autoincrement())
  Nombre String
  TipoIEgreso Boolean
  Color String
  Imagen String
  IEGreso IEGreso[]
}
model IEGreso {
  ID_IEgreso Int @id @default(autoincrement())
  Nombre String
  Descripcion String?
  FechaIEGreso DateTime
  FechaRegistro DateTime @default(now())
  FechaModificacion DateTime @default(now())
  Monto Float
  TipoIEgreso Boolean
  ID_CategoriaIEgreso Int
  CategoriaIEgreso CategoriaIEGreso? @relation(fields: [ID_CategoriaIEgreso], references: [ID_CategoriaIEgreso])
  Usuario Usuario? @relation(fields: [ID_Usuario], references: [ID_Usuario])
  ID_Usuario Int
}
